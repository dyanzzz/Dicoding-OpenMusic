{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-console": "off",
        "max-len": 0,
        "no-underscore-dangle": [
            "error", {
                "allow": [
                    "_notes",
                    "_service",
                    "_validator",
                    "_pool",
                    "_authenticationService",
                    "_userService",
                    "_tokenManager",
                    "_usersService",
                    "_playlistsService",
                    "_validatorPlaylist",
                    "_validatorPlaylistSong",
                    "_songsService",
                    "_collaborationsService"
                ]
            }
        ]
    }
}
